<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Description</th>
      <th>User_id</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @betties.each do |betty| %>
      <tr>
        <td><%= image_tag betty.image.url(:medium) %></td>
        <td><%= betty.description %></td>
        <td><%= betty.user.email if betty.user %></td>
        <td><%= link_to 'Show', betty %></td>
        <% if betty.user == current_user %>
          <td><%= link_to 'Edit', edit_betty_path(betty) %></td>
          <td><%= link_to 'Destroy', betty, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if user_signed_in? %>
  <%= link_to 'New Betty', new_betty_path %>
<% end %>